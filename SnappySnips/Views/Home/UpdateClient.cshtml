@{
  Layout = "_Layout";
}
<div class="container">
  <div class="well row">
    <h1>Snappy Snips Hair Salon</h1>
  </div>
  <div class="container well">
    <h2>Update Client: @Model.GetName()</h2>
    <div class="row">
      <form action="/clients/@Model.GetId()/update" method="post">
        <label for="name">Name:</label>
        <input type="text" name="new-name" id="new-name" value="@Model.GetName()">
        <button type="submit">EDIT</button>
      </form>
    </div>
    <div class="row">
      <h4><a href="/stylists/@Model.GetStylistId()/details">BACK</a></h4>
    </div>
  </div>
</div>
