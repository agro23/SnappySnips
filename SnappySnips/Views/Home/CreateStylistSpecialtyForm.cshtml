@{
  Layout = "_Layout";
}
<div class="container">

  <div class="well row">
    <h1>Snappy Snips Hair Salon</h1>
  </div>
  <div class="container well">
    <h2>Add a Specialty to @Model.GetName()</h2>

    <div class="row">
      <form action="/specialties/@Model.GetId()" method="post">
        <label for="new-client">New Client:</label>
          <input id="new-client" name="new-client" type="text">
        <button type="submit">ADD</button>
      </form>
    </div>
  <div class="row">
    <h4><a href="/">BACK</a></h4>
  </div>
</div>

</div>
