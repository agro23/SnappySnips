@{
  Layout = "_Layout";
}
<div class="container">
  <div class="well row">
    <h1>Snappy Snips Hair Salon</h1>
  </div>

  <div class = "well row">
    <h4><a href='clients/new'>ADD CLIENT</a> | <a href="/">BACK</a> | <a href="/clients/deleteAll/">DELETE ALL</a></h4>
  </div>

  <div class="well">
    <div class="row">
      <div class="col-lg-6">
        <h3>CLIENTS</h3>
      </div>
      <div class="col-lg-4">
        <h3>ACTION</h3>
      </div>
    </div>
    <div class="row">
      @if(@Model.Count > 0)
      {
          @foreach (var item in Model)
          {
            <div class="col-lg-6">
              <h4 style="color:purple; font-size:1.75em;">@item.GetName()</h4>
            </div>
            <div class="col-lg-4">
              <h4><a href="/clients/@item.GetId()/ClientDetails">VIEW</a></h4> 
            </div>
          }
      }
    </div>

  </div>
</div>
