@{
  Layout = "_Layout";
}
<div class="container">
  <div class="well row">
    <h1>Snappy Snips Hair Salon</h1>
  </div>

  <div class = "well row">
    <h4><a href='/stylists/new'>ADD STYLIST</a> | <a href='/specialties/new'>ADD SPECIALTY</a> | <a href="/deleteAll/">DELETE ALL</a></h4>
  </div>

  <div class="well">
    <div class="row">
      <div class="col-lg-6">
        <h3>STYLIST</h3>
      </div>
      <div class="col-lg-4">
        <h3>ACTION</h3>
      </div>
    </div>

    <div class="row">
      @if(@Model.Count > 0)
      {
          @foreach (var item in Model)
          {
            <div class="col-lg-6">
              <h4 style="color:purple; font-size:1.75em;">@item.GetName()</h4>
            </div>
            <div class="col-lg-4">
              <h4><a href="/stylists/@item.GetId()/details">VIEW</a> | <a href="/stylists/@item.GetId()/update">EDIT</a> | <a href="/stylists/@item.GetId()/delete">DELETE</a></h4>
            </div>
          }
      }
    </div>

    <div class="well">
      <div class="row">
        <div class="col-lg-6">
          <h3>SPECIALTY</h3>
        </div>
        <div class="col-lg-4">
          <h3>ACTION</h3>
        </div>
      </div>

      <div class="row">
        @if(Specialty.GetAll().Count > 0)
        {
            @foreach (var item in Model)
            {
              <div class="col-lg-6">
                <h4 style="color:purple; font-size:1.75em;">@item.GetName()</h4>
              </div>
              <div class="col-lg-4">
                <h4><a href="/stylists/@item.GetId()/details">VIEW</a> | <a href="/stylists/@item.GetId()/update">EDIT</a> | <a href="/stylists/@item.GetId()/delete">DELETE</a></h4>
              </div>
            }
        }
      </div>



  </div>
</div>
